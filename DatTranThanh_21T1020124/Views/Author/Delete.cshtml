@model Models.Author

@{
    ViewBag.Title = "Xóa tác giả";
}

<h2>Xóa tác giả</h2>

<h3>Bạn có chắc chắn muốn xóa tác giả này không?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <p>@Html.DisplayFor(model => model.BirthDate)</p>

    @if (Model.Books.Any())
    {
        <p>Lưu ý: Tác giả này có liên kết với các sách sau:</p>
        <ul>
            @foreach (var book in Model.Books)
            {
                <li>@Html.DisplayFor(m => book.Title)</li>
            }
        </ul>
    }
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<input type="submit" value="Xóa" class="btn btn-danger" />
 |
    @Html.ActionLink("Back to List", "Index");
}

